{
  "manifest_version": 2,

  "name": "API Redirection",
  "description": "Redirection Google/SNS API to mirros or cancel them, in order to speed up page loading in China",
  "version": "1.0",

  "background": {
    "scripts": ["bg.js"]
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128":"icon128.png"
  },

  "page_action":{
    "default_icon": {
      "19": "icon19.png"
    },
    "default_title": "API Redirected Notification"
  }
}
